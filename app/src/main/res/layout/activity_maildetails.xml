<?xml version="1.0" encoding="utf-8"?><RelativeLayout android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"><androidx.appcompat.widget.Toolbar    android:id="@+id/toolbar"    app:title="Mail"    app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"    app:titleTextColor="@android:color/white"    android:background="@color/colorPrimary"    android:layout_width="match_parent"    android:layout_height="?attr/actionBarSize"/>    <com.google.android.gms.ads.AdView        xmlns:ads="http://schemas.android.com/apk/res-auto"        android:id="@+id/adView1"        android:layout_width="match_parent"        android:layout_height="wrap_content"        ads:adSize="BANNER"        android:layout_alignParentBottom="true"        ads:adUnitId="ca-app-pub-3094951374738350/7756981225"/>    <com.google.android.gms.ads.AdView        xmlns:ads="http://schemas.android.com/apk/res-auto"        android:id="@+id/adView2"        android:layout_below="@+id/toolbar"        android:layout_width="match_parent"        android:layout_height="wrap_content"        ads:adSize="BANNER"        ads:adUnitId="ca-app-pub-3094951374738350/7756981225"/><RelativeLayout    android:layout_below="@+id/adView2"    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:id="@+id/linear"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_margin="@dimen/_5sdp"    android:layout_height="wrap_content">    <androidx.cardview.widget.CardView        android:id="@+id/card"        app:cardCornerRadius="@dimen/_10sdp"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <LinearLayout            android:layout_margin="@dimen/_10sdp"            android:orientation="vertical"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/txt_user_name"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:fontFamily="sans-serif-thin"                    android:text=""                    android:textColor="@android:color/black"                    android:textSize="@dimen/_16sdp"                    android:textStyle="bold" />                <TextView                    android:id="@+id/txt_date"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:maxLength="10"                    android:layout_alignParentEnd="true"                    android:layout_alignParentRight="true"                    android:text="" />            </RelativeLayout>            <TextView                android:id="@+id/txt_mail_id"                android:layout_marginStart="@dimen/_20sdp"                android:layout_width="wrap_content"                android:fontFamily="sans-serif-thin"                android:textSize="@dimen/_10sdp"                android:layout_height="wrap_content"                android:text=""                android:layout_marginLeft="@dimen/_20sdp" />            <TextView                android:id="@+id/txt_subj"                android:layout_marginStart="@dimen/_20sdp"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:fontFamily="sans-serif"                android:text=""                android:textColor="@android:color/black"                android:textSize="@dimen/_11sdp"                android:layout_marginLeft="@dimen/_20sdp" />            <ScrollView                android:layout_width="match_parent"                android:layout_height="match_parent">                <WebView                    android:id="@+id/webview"                    android:layout_width="match_parent"                    android:layout_height="match_parent"/>            </ScrollView>        </LinearLayout>    </androidx.cardview.widget.CardView></RelativeLayout>    <com.github.ybq.android.spinkit.SpinKitView        xmlns:app="http://schemas.android.com/apk/res-auto"        android:id="@+id/spin_kit"        android:background="@drawable/back_shape"        android:layout_marginTop="@dimen/_5sdp"        style="@style/SpinKitView.CubeGrid"        android:padding="@dimen/_10sdp"        android:visibility="gone"        android:layout_width="wrap_content"        android:layout_centerInParent="true"        android:layout_height="wrap_content"        android:layout_gravity="center"/>    <TextView        android:gravity="center"        android:id="@+id/txt_eror"        android:visibility="gone"        android:textColor="@color/colorPrimary"        android:text="No Mail Data found "        android:textSize="@dimen/_20sdp"        android:fontFamily="sans-serif-thin"        android:textStyle="bold"        android:layout_centerInParent="true"        android:layout_width="match_parent"        android:layout_height="wrap_content"/></RelativeLayout>