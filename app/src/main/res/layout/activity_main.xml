<?xml version="1.0" encoding="utf-8"?><androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/drawer_layout"    android:background="@android:color/white"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fitsSystemWindows="true"    tools:openDrawer="start"><RelativeLayout    android:layout_width="match_parent"    android:layout_height="match_parent"><LinearLayout    android:id="@+id/linear"    android:orientation="vertical"    android:background="@drawable/top_shape"    android:layout_width="match_parent"    android:layout_height="200dp"> <RelativeLayout     android:layout_marginTop="@dimen/_5sdp"     android:layout_width="match_parent"     android:layout_height="?attr/actionBarSize">     <LinearLayout         android:id="@+id/linear_side"         android:gravity="center"         android:orientation="horizontal"         android:layout_width="wrap_content"         android:layout_height="wrap_content">     <ImageView         android:id="@+id/img_sidbar"         android:padding="@dimen/_10sdp"         android:layout_width="@dimen/_40sdp"         android:src="@drawable/ic_baseline_notes_24"         android:layout_height="@dimen/_40sdp"/>         <EditText             android:visibility="gone"             android:id="@+id/txt_searching"             android:hint="Searching..."             android:background="@drawable/back_shape"             android:textSize="@dimen/_12sdp"             android:layout_margin="@dimen/_5sdp"             android:maxLength="120"             android:singleLine="true"             android:padding="@dimen/_5sdp"             android:textColor="@android:color/white"             android:textColorHint="@android:color/white"             android:layout_width="@dimen/_150sdp"             android:layout_height="wrap_content"/>     <TextView         android:id="@+id/txt_title"         android:layout_marginStart="@dimen/_10sdp"         android:textSize="@dimen/_15sdp"         android:textColor="@android:color/white"         android:text="TempMailGen"         android:textStyle="bold"         android:layout_width="wrap_content"         android:layout_height="wrap_content"         android:layout_marginLeft="@dimen/_10sdp" />     </LinearLayout>     <ImageView         android:id="@+id/img_search"         android:padding="@dimen/_10sdp"         android:layout_alignParentEnd="true"         android:layout_width="@dimen/_40sdp"         android:src="@drawable/ic_baseline_search_24"         android:layout_height="@dimen/_40sdp"         android:layout_alignParentRight="true" /> </RelativeLayout>    <Spinner        android:id="@+id/spiner_mail"        android:layout_margin="@dimen/_10sdp"        android:spinnerMode="dropdown"        style="@style/SpinnerTheme"        android:background="@color/colorPrimaryDark"        android:layout_width="match_parent"        android:layout_height="wrap_content"/>    <LinearLayout        android:gravity="center"        android:layout_marginTop="@dimen/_10sdp"        android:orientation="horizontal"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <ImageView            android:id="@+id/img_copy"            android:padding="@dimen/_8sdp"            android:background="@drawable/back_shape"            android:layout_width="@dimen/_35sdp"            android:src="@drawable/ic_baseline_file_copy_24"            android:layout_height="@dimen/_35sdp"/>        <ImageView            android:layout_marginStart="@dimen/_10sdp"            android:id="@+id/img_refresh"            android:padding="@dimen/_8sdp"            android:background="@drawable/back_shape"            android:layout_width="@dimen/_35sdp"            android:src="@drawable/ic_baseline_cached_24"            android:layout_height="@dimen/_35sdp"            android:layout_marginLeft="@dimen/_10sdp" />        <ImageView            android:layout_marginStart="@dimen/_10sdp"            android:id="@+id/img_add"            android:padding="@dimen/_8sdp"            android:background="@drawable/back_shape"            android:layout_width="@dimen/_35sdp"            android:src="@drawable/ic_baseline_add_24"            android:layout_height="@dimen/_35sdp"            android:layout_marginLeft="@dimen/_10sdp" />        <ImageView            android:layout_marginStart="@dimen/_10sdp"            android:id="@+id/img_delete"            android:padding="@dimen/_8sdp"            android:background="@drawable/back_shape"            android:layout_width="@dimen/_35sdp"            android:src="@drawable/ic_baseline_delete_outline_24"            android:layout_height="@dimen/_35sdp"            android:layout_marginLeft="@dimen/_10sdp" />    </LinearLayout></LinearLayout>    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/recyclerview"        android:layout_marginBottom="?attr/actionBarSize"        android:layout_below="@+id/linear"        android:layout_width="match_parent"        android:layout_height="match_parent"/><include layout="@layout/add_layout"></include>    <LinearLayout        android:orientation="vertical"        android:layout_centerInParent="true"        android:layout_margin="@dimen/_20sdp"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <com.github.ybq.android.spinkit.SpinKitView            android:id="@+id/spin_kit"            android:visibility="gone"            android:layout_marginTop="@dimen/_5sdp"            android:padding="@dimen/_10sdp"            style="@style/SpinKitView.CubeGrid"            android:background="@drawable/back_shape"            android:layout_width="wrap_content"            android:layout_centerInParent="true"            android:layout_height="wrap_content"            android:layout_gravity="center"            />        <LinearLayout            android:visibility="gone"            android:id="@+id/linear_empty"            android:orientation="vertical"            android:gravity="center"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <TextView                android:gravity="center"                android:id="@+id/txt_eror"                android:textColor="@color/colorPrimary"                android:text="Your inbox is empty"                android:textSize="@dimen/_20sdp"                android:fontFamily="sans-serif-thin"                android:textStyle="bold"                android:layout_centerInParent="true"                android:layout_width="match_parent"                android:layout_height="wrap_content"/>            <TextView                android:gravity="center"                android:textColor="@color/colorPrimary"                android:text="Click here to refresh"                android:textSize="@dimen/_10sdp"                android:fontFamily="sans-serif-thin"                android:textStyle="bold"                android:layout_centerInParent="true"                android:layout_width="match_parent"                android:layout_height="wrap_content"/>            <Button                android:id="@+id/btn_refresh"                android:padding="@dimen/_5sdp"                android:drawableLeft="@drawable/ic_baseline_cached_24"                android:layout_marginTop="@dimen/_10sdp"                android:layout_width="wrap_content"                android:drawablePadding="@dimen/_5sdp"                android:textColor="@android:color/white"                android:text="Refresh"                android:background="@drawable/back_shape"                android:layout_height="@dimen/_30sdp"/>        </LinearLayout>    </LinearLayout>    <com.google.android.gms.ads.AdView        xmlns:ads="http://schemas.android.com/apk/res-auto"        android:id="@+id/adView"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerHorizontal="true"        android:layout_alignParentBottom="true"        ads:adSize="BANNER"        ads:adUnitId="ca-app-pub-3094951374738350~3472766643">    </com.google.android.gms.ads.AdView></RelativeLayout>    <com.google.android.material.navigation.NavigationView        android:id="@+id/nav_view"        android:layout_width="wrap_content"        android:layout_height="match_parent"        android:layout_gravity="start"        android:fitsSystemWindows="true"        app:itemTextColor="@android:color/white"        app:itemBackground="@drawable/selector"        android:background="@drawable/selector"        app:itemIconTint="@android:color/white"        app:headerLayout="@layout/header_layout"        app:menu="@menu/drawer_option" /></androidx.drawerlayout.widget.DrawerLayout>