<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:id="@+id/reletive_add"    android:layout_marginTop="?attr/actionBarSize"    android:visibility="gone"    tools:context=".Activity.MainActivity">    <LinearLayout        android:id="@+id/linear"        android:layout_width="match_parent"        android:layout_height="200dp"        android:background="@drawable/top_shape"        android:orientation="vertical">        <EditText            android:id="@+id/txt_username"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_margin="@dimen/_10sdp"            android:background="@drawable/back_shape"            android:hint="Name"            android:textSize="@dimen/_12sdp"            android:padding="@dimen/_5sdp"            android:textColor="@android:color/white"            android:textColorHint="@android:color/white" />        <Spinner            android:id="@+id/spiner_mail_two"            style="@style/SpinnerTheme"            android:spinnerMode="dropdown"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginStart="@dimen/_10sdp"            android:layout_marginEnd="@dimen/_10sdp"            android:background="@drawable/back_shape" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="@dimen/_20sdp"            android:gravity="center"            android:orientation="horizontal">            <Button                android:id="@+id/btn_cancel"                android:layout_width="wrap_content"                android:layout_height="@dimen/_30sdp"                android:background="@drawable/red_btn_shape"                android:text="cancel"                android:textColor="@android:color/white" />            <Button                android:id="@+id/btn_save"                android:layout_marginStart="@dimen/_10sdp"                android:layout_width="wrap_content"                android:layout_height="@dimen/_30sdp"                android:text="save"                android:background="@drawable/ok_btn_shape"                android:textColor="@android:color/white"                android:layout_marginLeft="@dimen/_10sdp" />        </LinearLayout>    </LinearLayout></RelativeLayout>