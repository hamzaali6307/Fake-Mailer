<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:id="@+id/linear"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_margin="@dimen/_5sdp"    android:layout_height="wrap_content">    <androidx.cardview.widget.CardView        app:cardCornerRadius="@dimen/_10sdp"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <LinearLayout            android:layout_margin="@dimen/_10sdp"            android:orientation="vertical"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">             <LinearLayout                 android:gravity="center"                 android:orientation="horizontal"                 android:layout_width="wrap_content"                 android:layout_height="wrap_content">                 <ImageView                     android:id="@+id/img_opn"                    android:layout_gravity="center"                     android:padding="@dimen/_5sdp"                     android:src="@drawable/ic_baseline_fiber_gray"                     android:layout_width="@dimen/_20sdp"                     android:layout_height="@dimen/_20sdp"/>                 <TextView                     android:id="@+id/txt_user_name"                     android:layout_width="wrap_content"                     android:layout_height="wrap_content"                     android:fontFamily="sans-serif-thin"                     android:text="title"                     android:textColor="@android:color/black"                     android:textSize="@dimen/_16sdp"                     android:textStyle="bold" />             </LinearLayout>                <TextView                    android:id="@+id/txt_date"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:maxLength="10"                    android:textSize="@dimen/_8sdp"                    android:layout_alignParentEnd="true"                    android:layout_alignParentRight="true"                    android:text="12:03" />            </RelativeLayout>            <TextView                android:id="@+id/txt_mail_id"                android:layout_marginStart="@dimen/_20sdp"                android:layout_width="wrap_content"                android:fontFamily="sans-serif-thin"                android:textSize="@dimen/_10sdp"                android:layout_height="wrap_content"                android:text="h@gmail.com"                android:layout_marginLeft="@dimen/_20sdp" />            <TextView                android:id="@+id/txt_subj"                android:layout_marginStart="@dimen/_20sdp"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:fontFamily="sans-serif"                android:text="this is testing text for this email thanks"                android:textColor="@android:color/black"                android:textSize="@dimen/_13sdp"                android:layout_marginLeft="@dimen/_20sdp" />        </LinearLayout>    </androidx.cardview.widget.CardView></LinearLayout>